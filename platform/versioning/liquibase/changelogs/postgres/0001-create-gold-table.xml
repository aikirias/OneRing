<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

  <changeSet id="gold.orders.v1" author="codex">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="orders_snapshot" schemaName="gold"/>
      </not>
    </preConditions>
    <createTable schemaName="gold" tableName="orders_snapshot">
      <column name="order_id" type="VARCHAR(64)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orders_snapshot"/>
      </column>
      <column name="order_date" type="TIMESTAMP"/>
      <column name="customer_id" type="VARCHAR(64)"/>
      <column name="sales_total" type="NUMERIC(12,2)"/>
      <column name="status" type="VARCHAR(32)"/>
      <column name="ingested_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
    </createTable>
  </changeSet>

</databaseChangeLog>
